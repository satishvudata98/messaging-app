# Root environment example for deployment

# Backend
NODE_ENV=production
PORT=5000
DATABASE_URL=postgres://user:password@postgres:5432/messaging
REDIS_URL=redis://redis:6379
JWT_SECRET=replace_with_strong_secret
JWT_REFRESH_SECRET=replace_with_strong_refresh_secret
CORS_ORIGIN=https://your.domain.com
SOCKET_IO_PINGINTERVAL=25000
SOCKET_IO_PINGTIMEOUT=60000

# TURN / Coturn
TURN_SERVER_URL=turn:coturn:3478
TURN_USERNAME=turnuser
TURN_PASSWORD=turnpassword
TURN_EXTERNAL_IP=YOUR_PUBLIC_IP_OR_DOMAIN

# Frontend (build-time vars)
REACT_APP_API_URL=https://your.domain.com/api
REACT_APP_SOCKET_URL=https://your.domain.com
REACT_APP_TURN_SERVERS='[{"urls":["turn:your.domain.com:3478"],"username":"turnuser","credential":"turnpassword"}]'
# Environment variables for docker-compose

# Backend JWT Secrets (IMPORTANT: Change these in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production

# TURN Server Credentials
TURN_USERNAME=turnuser
TURN_PASSWORD=turnpassword

# CORS Origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_TURN_SERVERS=[{"urls": ["turn:coturn:3478"], "username": "turnuser", "credential": "turnpassword"}]
